{
  "env": {
    "browser": true,
    "es2021": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["import", "react", "react-hooks", "prettier"],
  "rules": {
    "prettier/prettier": [

      "error",
      {
        "semi": false,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120,
        "endOfLine": "auto"
      }
    ],
    "quotes": ["error", "single"],
    "import/extensions": ["error", "never"],
    "import/order": ["error", { "groups": ["builtin", "external", "internal"] }],
    "react/prop-types": 0,
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "off",
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "react/no-unescaped-entities": "warn"
  }
}